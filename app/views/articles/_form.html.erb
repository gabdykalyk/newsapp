<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-4">
    <%= form.text_field :title, class: "form-control", placeholder: "Заголовок" %>
  </div>

  <div class="mt-4">
    <div>
    <%= image_tag @article.image.thumb('500x300#').url if @article.image_stored? %>
    </div>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="mt-4">
    <%= form.text_field :description, class: "form-control", placeholder: "Описание" %>
  </div> 

  <div class="mt-3">
    <div class="form-check">
      <%= form.label :visible, "Показать новость", value: "true", class: "form-check-label"  %>
      <%= form.radio_button :visible, true, checked: true, class: "form-check-input"  %>
    </div>
    <div class="form-check">
      <%= form.label :visible, "Скрыть новость", value: "false", class: "form-check-label" %>
      <%= form.radio_button :visible, false, class: "form-check-input" %>
    </div>
  </div>

  <div class="mt-4">
    <%= form.submit class:"btn btn-dark" %>
  </div>
<% end %>
